{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "postinstall": "patch-package",
    "save:json": "npx ts-node app/models/saveAsJson.ts",
    "build": "run-s \"build:*\"",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "build:remix": "remix build",
    "dev": "run-p \"dev:*\"",
    "dev:css": "postcss styles --base styles --dir app/styles -w",
    "dev:remix": "remix dev | pino-pretty",
    "generate:css": "npx tailwindcss -o ./app/tailwind.css",
    "unit": "vitest",
    "e2e": "start-server-and-test dev http://localhost:3000 \"npx cypress open --env failOnSnapshotDiff=false\"",
    "e2e:run": "start-server-and-test dev http://localhost:3000 \"npx cypress run --browser chrome --headed --env failOnSnapshotDiff=false\"",
    "e2e:update": "start-server-and-test dev http://localhost:3000 \"npx cypress run --env updateSnapshots=true --browser chrome --headed\"",
    "lint": "eslint app"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.10",
    "@reach/portal": "^0.17.0",
    "@remix-run/node": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "@remix-run/vercel": "^1.7.0",
    "@vercel/node": "^2.4.4",
    "@zag-js/dialog": "^0.1.13",
    "@zag-js/menu": "^0.1.14",
    "@zag-js/react": "^0.1.16",
    "@zag-js/tags-input": "^0.2.6",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "daisyui": "^2.24.0",
    "edgedb": "^0.22.1",
    "jotai": "^1.8.2",
    "lru-cache": "^7.14.0",
    "marked": "^4.0.19",
    "patch-package": "^6.4.7",
    "pino": "^8.5.0",
    "postinstall-postinstall": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-use": "^17.4.0",
    "remark-toc": "^8.0.1",
    "tiny-invariant": "^1.2.0",
    "zod": "^3.18.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.0",
    "@remix-run/eslint-config": "^1.7.0",
    "@remix-run/serve": "^1.7.0",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/dom": "^8.17.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/cypress-image-snapshot": "^3.1.6",
    "@types/marked": "^4.0.6",
    "@types/node": "^18.7.14",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/testing-library__cypress": "^5.0.9",
    "@vitejs/plugin-react": "^2.0.1",
    "autoprefixer": "^10.4.8",
    "cypress": "^10.7.0",
    "cypress-image-snapshot": "^4.0.1",
    "daisyui": "^2.24.0",
    "eslint": "^8.20.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-unicorn": "^43.0.2",
    "jsdom": "^20.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "start-server-and-test": "^1.14.0",
